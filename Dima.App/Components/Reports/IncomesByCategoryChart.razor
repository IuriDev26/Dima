<MudCard Style="width: 100%"   >
    <MudCardHeader>
        <MudText Typo="Typo.h6">Receitas por categoria</MudText>
    </MudCardHeader>
    <MudCardContent Class="d-flex justify-center">
        @if (IsLoading)
        {
            <MudProgressCircular Indeterminate="true"/>
        }
        else if (@Incomes.Count == 0)
        {
            <MudText Class="py-12"  Typo="Typo.h5">Sem dados para exibir</MudText>    
        }
        else
        {
            <MudChart
                ChartType="ChartType.Donut"
                InputData="@Incomes.ToArray()"
                InputLabels="@Categories.ToArray()"
                Width="300px"
                Height="300px"/>
        }
    </MudCardContent>    
</MudCard>
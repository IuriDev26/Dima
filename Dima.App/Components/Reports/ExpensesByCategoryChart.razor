<MudCard Style="width: 100%">
    <MudCardHeader>
        <MudText Typo="Typo.h6">Despesas por categoria</MudText>
    </MudCardHeader>
    <MudCardContent Class="d-flex justify-center align-center">
        @if (IsLoading)
        {
            <MudProgressCircular Indeterminate="true"/>
        }
        else if (@Expenses.Count == 0)
        {
            <MudText Typo="Typo.h5">Sem dados para exibir</MudText>    
        }
        else
        {
            <MudChart
                ChartType="ChartType.Donut"
                InputData="@Expenses.ToArray()"
                InputLabels="@Categories.ToArray()"
                Width="300px"
                Height="300px"/>
        }
    </MudCardContent>
</MudCard>

@page "/premium"

<MudContainer Class="mt-16">
    <MudText Typo="Typo.h3" Align="Align.Center" GutterBottom="true">Premium</MudText>
    <MudText Align="Align.Center">
        Tenha acesso ilimitado ao Dima, incluindo categorias e transações ilimitadas
    </MudText>
    <MudGrid Class="mt-8 justify-center">
        @foreach (var product in Products)
        {
            <MudItem>
                <MudCard>
                    <MudCardHeader>
                        <CardHeaderContent>
                            <MudText Typo="Typo.h5" Class="d-flex justify-center">
                                @product.Title
                            </MudText>
                        </CardHeaderContent>
                    </MudCardHeader>
                    
                    <MudCardContent>
                        <div class="d-flex justify-center">
                            <MudText Typo="Typo.h3">
                                @product.Amount.ToString("C")
                            </MudText>
                        </div>
                        <MudList T="string" Class="mx-auto mt-4" Style="width: 300px">
                            <MudListItem T="string" Icon="@Icons.Material.Filled.Check">Transações Ilimitadas</MudListItem>
                            <MudListItem T="string" Icon="@Icons.Material.Filled.Check">Categorias Ilimitadas</MudListItem>
                            <MudListItem T="string" Icon="@Icons.Material.Filled.Check">Acesso completo</MudListItem>
                        </MudList>
                    </MudCardContent>
                    
                    <MudCardActions Class="d-flex justify-center mb-4">
                        <MudButton OnClick="@(() => CreateOrder(product.Id))" Variant="Variant.Filled" Color="Color.Primary" Size="Size.Large">
                            Começar Agora
                        </MudButton>
                    </MudCardActions>
                </MudCard>
            </MudItem>
        }
    </MudGrid>
</MudContainer>
